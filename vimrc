" 更改键位
" noremap n h

" 大写K快速向前5行
noremap K 5k
" 大写J快速向后5行
noremap J 5j
" 快速向前7个字符
noremap H 7h
" 快速向后7个字符
noremap L 7l
" h key: go to the start of the line
noremap <C-h> 0
" l key: go to the end of the line
noremap <C-l> $


" 小写s失效
map s <nop>
" 大写S保存命令
map S :w<CR>
" 大写Q退出vim
map Q :q<CR>
" 大写R键vimrc文件直接生效
map R :source $MYVIMRC<CR>


" 分屏操作
" 当前窗口右边分屏
map sl :set splitright<CR>:vsplit<CR>
" 当前窗口左边分屏
map sh :set nosplitright<CR>:vsplit<CR>
" 当前窗口上面分屏
map sk :set nosplitbelow<CR>:split<CR>
" 当前窗口下边分屏
map sj :set splitbelow<CR>:split<CR>

" 多个窗口在同一个标签页打开时可以更换摆放
" 垂直分屏
map sv <C-w>t<C-w>H
" 横向分屏
map sh <C-w>t<C-w>K

" 窗口切换
" 空格加l切换到右边的窗口
map <LEADER>l <C-w>l
map <LEADER>k <C-w>k
map <LEADER>h <C-w>h
map <LEADER>j <C-w>j

